{
  "compilerOptions": {
     "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es2016",
    "outDir": "./build",
    "lib": [
      "es2016",
      "ES2015.Promise",
      "DOM"
    ],
   "types": [
      "jest",
      "@jpmorganchase/perspective-viewer",
      "@jpmorganchase/perspective-phosphor"
    ]
  },
  "include": ["ts/src/*", "ts/style/*"]
}